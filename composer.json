{
  "name": "rugaard/dmi",
  "type": "library",
  "description": "API for the Danish Meteorological Institute (DMI)",
  "keywords": [
    "morten",
    "rugaard",
    "morten rugaard",
    "dmi",
    "danish meteorological institute",
    "dmi api",
    "danish meteorological institute api",
    "api",
    "weather",
    "forecast",
    "weather forecast"
  ],
  "authors": [
    {
      "name": "Morten Rugaard",
      "email": "morten@rugaard.me",
      "homepage": "https://github.com/rugaard",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/rugaard",
  "support": {
    "issues": "https://github.com/rugaard/dmi/issues",
    "source": "https://github.com/rugaard/dmi"
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0",
    "tightenco/collect": "^8.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Rugaard\\DMI\\": "src",
      "Rugaard\\DMI\\Old\\": "v1"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rugaard\\DMI\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --colors=always"
  },
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
